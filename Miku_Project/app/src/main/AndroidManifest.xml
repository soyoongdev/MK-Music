<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.miku_project">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Miku_Project"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".PlayMusicActivity"
            android:exported="false" />
        <activity
            android:name=".PLayMusicActivity"
            android:exported="false"
            android:label="@string/title_activity_play_music"
            android:theme="@style/Theme.Miku_Project.NoActionBar" />
        <activity
            android:name=".screens.main_screens.Playlist_Screen"
            android:exported="true" />
        <activity
            android:name=".screens.main_screens.PlaySong_Screen"
            android:exported="true" />
        <activity
            android:name=".screens.ProductList_Screen"
            android:exported="true" />
        <activity
            android:name=".forms.Insert_Favorite"
            android:exported="true" />
        <activity
            android:name=".screens.main_screens.Bottom_nav"
            android:exported="true" />
        <activity
            android:name=".screens.activity_screens.ResetPassword_screen"
            android:exported="true" />
        <activity
            android:name=".screens.activity_screens.SignUp_screen"
            android:exported="true" />
        <activity
            android:name=".screens.activity_screens.LogIn_screen"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>