<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/bg_radius">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.8"
        android:src="@drawable/bg_list" />

    <ImageView
        android:id="@+id/iv_favorite_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_list_favo"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_favorite_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tranz"
        android:textColor="#fff"
        android:fontFamily="@font/redhattext_regular"
        android:layout_toRightOf="@id/iv_favorite_img"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_favorite_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gorillaz"
        android:textColor="#fff"
        android:fontFamily="@font/redhattext_regular"
        android:layout_toRightOf="@id/iv_favorite_img"
        android:layout_below="@id/tv_favorite_name"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_favorite_name"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/tv_favorite_artist"
        android:fontFamily="@font/redhattext_regular"
        android:text="."
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_time_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_favorite_name"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/tv_dot"
        android:fontFamily="@font/redhattext_regular"
        android:text="2.43"
        android:textColor="#fff"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/ic_more_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_more" />

</RelativeLayout>