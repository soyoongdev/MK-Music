<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:background="@drawable/bg_radius">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_recommend_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">
        <ImageView
            android:id="@+id/iv_recommend"
            android:layout_width="227dp"
            android:layout_height="128dp"
            android:scaleType="fitXY"
            android:src="@drawable/gorillaz" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_recommend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_recommend_item"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_bold"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_recommend_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_recommend_title"
        android:fontFamily="@font/roboto_regular"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="14sp" />

</RelativeLayout>