<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forms.Insert_Favorite"
    android:background="@color/mainColor">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp">

        <ImageView
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:alpha="0.5"
            android:background="@drawable/bg_welcome" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_regular"
            android:text="Create your favorite music!"
            android:textColor="#ffffff"
            android:textSize="25sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/ic_name"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_name"
        android:layout_toLeftOf="@id/edt_insert_favorite_name"
        android:layout_below="@id/rl_title"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/edt_insert_favorite_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#fff"
        android:fontFamily="@font/roboto_regular"
        android:textColor="#fff" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/ic_name"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@id/edt_insert_favorite_singer"
        android:background="@drawable/singer" />

    <EditText
        android:id="@+id/edt_insert_favorite_singer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_insert_favorite_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="#fff"
        android:fontFamily="@font/roboto_regular"
        android:textColor="#fff" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/edt_insert_favorite_singer"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/edt_insert_favorite_singer"
        android:background="@drawable/ic_music" />

    <EditText
        android:id="@+id/edt_insert_favorite_song"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_insert_favorite_singer"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#fff"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="#fff" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/edt_insert_favorite_song"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/edt_insert_favorite_time"
        android:background="@drawable/ic_time" />

    <EditText
        android:id="@+id/edt_insert_favorite_time"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_insert_favorite_song"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#fff"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="#fff" />

    <Spinner
        android:id="@+id/spn_insert_favorite_category"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/edt_insert_favorite_time"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/rl_upload_favorite_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spn_insert_favorite_category"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:alpha="0.9"
            android:background="@drawable/bg_welcome" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/redhattext_regular"
            android:text="Upload"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_image" />

    </RelativeLayout>

<!--    <Button-->
<!--        android:id="@+id/btn_insert_favorite_image"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/spn_insert_favorite_category"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:text="Upload" />-->

    <ImageView
        android:id="@+id/favorite_image_uploaded"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/spn_insert_favorite_category"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/rl_upload_favorite_image" />

    <RelativeLayout
        android:id="@+id/rl_insert_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_below="@id/rl_upload_favorite_image"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:alpha="0.9"
            android:background="@drawable/bg_button3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto"
            android:paddingTop="15dp"
            android:text="Insert"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </RelativeLayout>

