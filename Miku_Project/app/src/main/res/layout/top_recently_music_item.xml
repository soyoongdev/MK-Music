<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/mainColor"
    android:layout_width="match_parent"
    android:layout_height="37dp"
    android:layout_marginVertical="10dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_no_item_top_music_recently"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/white"/>

    <androidx.legacy.widget.Space
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <ImageView
        android:id="@+id/img_avatar_item_top_music_recently"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/rock" />

    <androidx.legacy.widget.Space
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_item_top_music_recently"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nice for at"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_subtitle_item_top_music_recently"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avinci John"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:textStyle="normal" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/icon_more_item_top_music_recently"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_more"
        android:background="@color/transparent"
        android:rotation="90"/>

</LinearLayout>