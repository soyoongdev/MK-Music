    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="250dp"
        android:progress="@integer/material_motion_duration_long_1"
        android:progressDrawable="@drawable/seekbar_style"
        android:thumb="@drawable/custom_thump" />

    <TextView
        android:id="@+id/time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_product_name"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="75dp"
        android:text="00.00"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/time_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_product_name"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="75dp"
        android:text="00.00"
        android:textColor="#fff" />


    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Tranz"
        android:textColor="#fff"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tv_product_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="105dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Gorillaz"
        android:textColor="#4DD3C7"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/fast_back_product"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="40dp"
        android:layout_toLeftOf="@id/iv_play_product"
        android:src="@drawable/ic_fast" />

    <ImageView
        android:id="@+id/play_random"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:layout_toLeftOf="@id/fast_back_product"
        android:src="@drawable/ic_mx" />

    <ImageView
        android:id="@+id/iv_play_product"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_play2" />

    <ImageView
        android:id="@+id/fast_foward_product"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="40dp"
        android:layout_toRightOf="@id/iv_play_product"
        android:src="@drawable/ic_fast_forwar_24" />

    <ImageView
        android:id="@+id/repeat_product"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="50dp"
        android:layout_toRightOf="@id/fast_foward_product"
        android:src="@drawable/ic_repeat" />

</RelativeLayout>